doctype html
html
  head
    title Student Database
    link(rel="stylesheet", href="/assets/style.css")
  body
    nav.nav_bar
      ul
        a(href="student_database"): li Home
        a(href="add_student.html"): li Add
        a(href="search_student.html"): li Search
        a(href="display.html"): li Display
        a(href="remove_student.html"): li Remove
        a(href="update_student.html"): li Update
    h1 STUDENT DATABASE
    h3.sub-heading LIST OF ALL STUDENTS

    each item in data
      div.each-data
        p Name: #{item.name}
        p Register Number: #{item.reg_no}
        p Branch: #{item.branch}
        p Contact Number: #{item.contact_no}